<?xml version='1.0' ?>

<launch>
  <arg name="use_sim_time" default="false"/>

  <!-- Common launch -->
  <include file="$(find-pkg-share rmf_library)/common.launch.xml">
    <arg name="use_sim_time" value="$(var use_sim_time)"/>
    <arg name="viz_config_file" value ="$(find-pkg-share rmf_library)/include/TD/TD.rviz"/>
    <arg name="config_file" value="$(find-pkg-share rmf_library_maps)/TD/TD.building.yaml"/>
    <arg name="use_reservation_node" value="true"/>
  </include>

  <!-- TinyRobot fleet adapter -->
  <group>
    <include file="$(find-pkg-share rmf_library_fleet_adapter)/launch/fleet_adapter.launch.xml">
      <arg name="use_sim_time" value="$(var use_sim_time)"/>
      <arg name="nav_graph_file" value="$(find-pkg-share rmf_library_maps)/maps/TD/nav_graphs/0.yaml" />
      <arg name="config_file" value="$(find-pkg-share rmf_library)/config/TD/tinyRobot_config.yaml"/>
    </include>
  </group>

    <!-- cleanerBotA fleet adapter -->
  <group>
    <include file="$(find-pkg-share rmf_library_fleet_adapter)/launch/fleet_adapter.launch.xml">
      <arg name="use_sim_time" value="$(var use_sim_time)"/>
      <arg name="nav_graph_file" value="$(find-pkg-share rmf_library_maps)/maps/TD/nav_graphs/1.yaml" />
      <arg name="config_file" value="$(find-pkg-share rmf_library)/config/TD/cleanerBotA_config.yaml"/>
    </include>
  </group>

    <!-- DeliveryRobot fleet adapter -->
  <group>
    <include file="$(find-pkg-share rmf_library_fleet_adapter)/launch/fleet_adapter.launch.xml">
      <arg name="use_sim_time" value="$(var use_sim_time)"/>
      <arg name="nav_graph_file" value="$(find-pkg-share rmf_library_maps)/maps/TD/nav_graphs/0.yaml" />
      <arg name="config_file" value="$(find-pkg-share rmf_library)/config/TD/deliveryRobot_config.yaml"/>
    </include>
  </group>


</launch>
