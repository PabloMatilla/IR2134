<?xml version='1.0' ?>

<launch>
  <arg name="use_sim_time" default="false"/>

  <!-- Common launch -->
  <include file="$(find-pkg-share rmf_library)/common.launch.xml">
    <arg name="use_sim_time" value="$(var use_sim_time)"/>
    <arg name="viz_config_file" value ="$(find-pkg-share rmf_library)/include/simple/simple.rviz"/>
    <arg name="config_file" value="$(find-pkg-share rmf_library_maps)/simple/simple.building.yaml"/>
    <arg name="use_reservation_node" value="true"/>
  </include>

  <!-- TinyRobot fleet adapter -->
  <group>
    <include file="$(find-pkg-share rmf_library_fleet_adapter)/launch/fleet_adapter.launch.xml">
      <arg name="use_sim_time" value="$(var use_sim_time)"/>
      <arg name="nav_graph_file" value="$(find-pkg-share rmf_library_maps)/maps/simple/nav_graphs/0.yaml" />
      <arg name="config_file" value="$(find-pkg-share rmf_library)/config/simple/tinyRobot_config.yaml"/>
    </include>
  </group>

</launch>
